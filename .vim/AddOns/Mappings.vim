let mapleader = " "
noremap <leader>w :w<CR>        " Save
noremap <leader>q :q<CR>        " Quit  
noremap <leader>vs :vs<CR>      " 
noremap <leader>bd :bd<CR>      " Delete the buffers
noremap <leader>qa :qa<CR>      " Quit all buffers

" Disable arrow keys
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
